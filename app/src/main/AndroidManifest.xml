<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.com.charlyescaz.datagot">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DataGoT">
        <activity android:name=".ui.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.character.CharactersActivity" />
        <activity android:name=".ui.character.CharacterDetailsActivity" />
        <activity android:name=".ui.battles.BattlesActivity" />
        <activity android:name=".ui.battles.BattleDetailsActivity" />
        <activity android:name=".ui.places.PlacesActivity" />
        <activity android:name=".ui.places.continents.ContinentActivity" />
    </application>

</manifest>